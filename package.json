{
  "name": "@brightcove/player-loader",
  "version": "1.1.0",
  "description": "An asynchronous script loader for the Brightcove Player.",
  "main": "dist/brightcove-player-loader.cjs.js",
  "module": "dist/brightcove-player-loader.es.js",
  "generator-videojs-plugin": {
    "version": "6.1.1"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:*",
    "build:js": "rollup -c scripts/rollup.config.js",
    "clean": "rimraf dist test/dist",
    "postclean": "mkdirp dist test/dist",
    "lint": "vjsstandard",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch --no-browsers",
    "start": "npm-run-all -p server watch",
    "pretest": "npm-run-all lint build",
    "test": "karma start scripts/karma.conf.js",
    "preversion": "npm test",
    "version": "node scripts/version.js",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "npm run build:js -- -w",
    "prepublish": "not-in-install && npm run build || in-install",
    "prepush": "npm run lint"
  },
  "keywords": [
    "brightcove",
    "video",
    "audio",
    "media",
    "player",
    "loader"
  ],
  "author": "Brightcove, Inc.",
  "license": "Apache-2.0",
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist",
      "vendor"
    ]
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "dependencies": {
    "global": "^4.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "conventional-changelog-cli": "^2.0.1",
    "conventional-changelog-videojs": "^3.0.0",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "karma": "^2.0.4",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-detect-browsers": "^2.3.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-qunit": "^2.1.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-teamcity-reporter": "^1.1.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "qunit": "^2.6.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^4.0.0",
    "semver": "^5.5.0",
    "serve-static": "^1.13.2",
    "sinon": "^5.1.1",
    "uglify-es": "^3.3.9",
    "videojs-standard": "^6.0.1"
  }
}
